{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "warn",
        "noStaticOnlyClass": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useBlockStatements": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  }
}